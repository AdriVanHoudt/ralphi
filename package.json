    "test-server": "mocha 'test/unit/server/**/*.test.js'",
    "cover-server": "nyc --reporter=lcov --reporter=text mocha 'test/unit/server/**/*.test.js'",
    "test-client": "mocha 'test/unit/client/**/*.test.js'",
    "cover-client": "nyc --reporter=lcov --reporter=text mocha 'test/unit/client/**/*.test.js'",
    "test-hapi-plugin": "mocha 'test/unit/hapi-plugin/**/*.test.js'",
    "cover-hapi-plugin": "nyc --reporter=lcov --reporter=text mocha 'test/unit/hapi-plugin/**/*.test.js'",
